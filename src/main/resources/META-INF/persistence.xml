<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="RSAnalytics">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>modelo.pojo.Municipio</class>
        <class>modelo.pojo.Provincia</class>

        <class>modelo.pojo.rest.Usuario</class>
        <class>modelo.pojo.rest.Rol</class>
        <class>modelo.pojo.rest.Token</class>
        <class>modelo.pojo.rest.Grupo</class>

        <class>modelo.pojo.rest.usuario_grupo.UsuarioGrupo</class>
        <class>modelo.pojo.rest.usuario_grupo.UsuarioGrupoId</class>

        <class>modelo.pojo.rest.Notificacion</class>
        <class>modelo.pojo.rest.Accion</class>
        <class>modelo.pojo.rest.Tipo</class>

        <class>modelo.pojo.scrapers.Anuncio</class>
        <class>modelo.pojo.scrapers.Procedencia</class>
        <class>modelo.pojo.scrapers.ClaveAtributoAnuncio</class>
        <class>modelo.pojo.scrapers.atributo_anuncio.AtributoAnuncio</class>
        <class>modelo.pojo.scrapers.atributo_anuncio.AtributoAnuncioId</class>
        <class>modelo.pojo.scrapers.Inmueble</class>
        <class>modelo.pojo.scrapers.ClaveAtributoInmueble</class>
        <class>modelo.pojo.scrapers.TipoContrato</class>
        <class>modelo.pojo.scrapers.TipoInmueble</class>
        <class>modelo.pojo.scrapers.atributo_inmueble.AtributoInmueble</class>
        <class>modelo.pojo.scrapers.atributo_inmueble.AtributoInmuebleId</class>
        <class>modelo.pojo.scrapers.anuncio_inmueble_tipoContrato.AnuncioInmuebleTipoContrato</class>
        <class>modelo.pojo.scrapers.anuncio_inmueble_tipoContrato.AnuncioInmuebleTipoContratoId</class>
        <class>modelo.pojo.scrapers.Informe</class>
        <class>modelo.pojo.scrapers.informe_inmueble.InformeInmueble</class>
        <class>modelo.pojo.scrapers.informe_inmueble.InformeInmuebleId</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/RSAnalytics?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.jdbc.batch_size" value="100"/>
        </properties>
    </persistence-unit>

</persistence>
<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN" 
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>    
    <class name="modelo.pojo.Usuario"
           table="usuario">
        <id name="id" column="id">
            <generator class="native"/>
        </id>

        <property name="nombre" column="nombre" type="string"/>
        <property name="primerApellido" column="primer_apellido" type="string"/>
        <property name="segundoApellido" column="segundo_apellido" type="string"/>
        <property name="telefono" column="telefono" type="string"/>
        <property name="correo" column="correo" type="string"/>
        <property name="contrasenia" column="contrasenia" type="binary"/>
        <property name="salt" column="salt" type="binary"/>

        <!-- Rol del usuario -->
        <many-to-one name="rol"
            column="id_rol"
            class="modelo.pojo.Rol"
            cascade="all"
            not-null="true"/>

    </class>
</hibernate-mapping>

